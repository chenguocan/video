{
	"easycom": {
			"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
            "path" : "pages/discover/discover",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "发现",
                "enablePullDownRefresh": false,
				"app-plus":{
					"titleNView":{
						"searchInput":{
							"backgroundColor":"#fff",
							"borderRadius":"15px",
							"placeholder":"输入搜索内容",
							"disabled":true,
							"align":"left"
						},
						"buttons":[{
							"disabled":true,
							"text":"分类",
							"width":"44px",
							"fontSize":"16px"
						}]
					}
				}
            }
            
        }
        ,{
            "path" : "pages/my/my",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "我的",
                "enablePullDownRefresh": false,
				"app-plus": {
				    "titleNView": false //禁用原生导航栏
				}
            }
            
        }
        ,{
            "path" : "pages/classify/classify",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "分类",
                "enablePullDownRefresh": false,
				"app-plus":{
					"titleNView":{
						"backgroundColor":"#fff",
						"searchInput":{
							"backgroundColor":"#f0f0f0",
							"borderRadius":"15px",
							"placeholder":"输入搜索内容",
							"disabled":true,
							"align":"left"
						}
					}
				}
				
            }
            
        }
        ,{
            "path" : "pages/simple/simple",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "发布作品",
                "enablePullDownRefresh": false,
