           		"titleNView":{
           			"backgroundColor":"#FFFFFF"
           		}
           	}
           }
            
        }
        ,{
            "path" : "pages/mywork/mywork",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "我的作品",
                "enablePullDownRefresh": false,
				"app-plus":{
					"titleNView":{
						"backgroundColor":"#FFFFFF"
					}
				}
            }
            
        }
