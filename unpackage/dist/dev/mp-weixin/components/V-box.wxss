.video-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.video-box .video {
  border: 1rpx solid #f5f4f7;
  margin-top: 10px;
  width: 345rpx;
  height: 410rpx;
  border-radius: 6px;
  position: relative;
  box-shadow: 1px 1px 10px #ebebeb;
}
.video-box .video .video-cover {
  width: 345rpx;
  height: 220rpx;
  border-radius: inherit;
}
.video-box .video .video-cover image {
  width: 345rpx;
  border-radius: inherit;
  height: inherit;
}
.video-box .video .video-footer {
  position: absolute;
  color: #F1F1F1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  left: 0;
  right: 0;
  height: 40rpx;
  top: 180rpx;
  background-image: -webkit-linear-gradient(top, transparent, rgba(52, 52, 52, 0.8));
  background-image: linear-gradient(to bottom, transparent, rgba(52, 52, 52, 0.8));
}
.video-box .video .video-footer .play-num {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 150rpx;
  margin: 0 20rpx;
}
.video-box .video .video-footer .barrage {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.video-box .video .title {
  font-size: 32rpx;
  margin: 10rpx 20rpx;
  overflow: hidden;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.video-box .video .classify {
  font-size: 35rpx;
  width: 100%;
  color: #dcdcdc;
  padding: 10rpx  20rpx;
  position: absolute;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  bottom: 0;
}

